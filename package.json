{
  "name": "react-transit",
  "version": "0.1.0",
  "description": "Components to display transit data in React map apps.",
  "license": "MIT",
  "dependencies": {
    "abortcontroller-polyfill": "^1.3.0",
    "ol": "^6.0.0-beta.13",
    "prop-types": "^15.6.2",
    "query-string": "^6.8.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-icons": "^3.7.0",
    "react-spatial": "^0.1.0-beta.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.3.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-named-asset-import": "^0.3.0",
    "babel-preset-react-app": "^9.0.0",
    "canvas": "^2.3.1",
    "css-loader": "^3.2.0",
    "cypress": "^3.1.5",
    "documentation": "^12.1.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "fetch-mock": "^7.2.5",
    "generact": "^0.4.0",
    "geops-docjs-template": "^1.0.0",
    "husky": "^3.0.3",
    "jest": "^24.9.0",
    "jest-canvas-mock": "^2.0.0-alpha.2",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "jest-serializer-html": "^7.0.0",
    "jest-svg-transformer": "^1.0.0",
    "jest-transform-file": "^1.1.1",
    "lint-staged": "^9.2.1",
    "node-fetch": "^2.3.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.3",
    "react-app-polyfill": "^1.0.2",
    "react-styleguidist": "^9.0.2",
    "react-test-renderer": "^16.5.2",
    "redux-mock-store": "^1.5.3",
    "rewire": "^4.0.1",
    "sass-loader": "^7.2.0",
    "stream-array": "^1.1.2",
    "style-loader": "^1.0.0",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.5.1",
    "url-loader": "^2.1.0",
    "vinyl-fs": "^3.0.3",
    "webpack": "^4.39.2"
  },
  "peerDependency": {
    "ol": "^6.0.0-beta.13",
    "react-spatial": "^0.0.14-beta.62"
  },
  "scripts": {
    "build": "buble --no modules,asyncAwait -i src -o build --objectAssign Object.assign --sourcemap, && cp -t build package.json README.md LICENSE && cp -rf src/images build",
    "coverage": "yarn test --coverage --coverageDirectory=coverage",
    "cp": "generact --root src/components",
    "doc": "bash ./scripts/prepare-doc.sh",
    "doc:server": "styleguidist server",
    "format": "prettier --write 'src/**/*.js' && eslint 'src/**/*.js' --fix && stylelint 'src/**/*.css' 'src/**/*.scss' --fix",
    "lint": "eslint 'src/**/*.js' && stylelint 'src/**/*.css' 'src/**/*.scss'",
    "prebuild": "rm -rf build/",
    "postbuild": "cp package.json build/ && cd src && find .  -name '*.scss' | cpio -pdm ../build",
    "publish:public": "yarn version && git push origin HEAD && yarn build && yarn publish build/",
    "publish:beta": "yarn publish:public --tag beta",
    "test": "jest",
    "start": "yarn doc:server"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/forbid-prop-types": "Off",
      "prettier/prettier": "error",
      "jsx-a11y/no-access-key": "Off"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.scss$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "jest-serializer-html"
    ],
    "testEnvironment": "jest-environment-jsdom-fourteen",
    "testMatch": [
      "<rootDir>/src/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svg$": "jest-svg-transformer",
      "\\.(jpg|jpeg|png|gif|webp)$": "jest-transform-file"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(jsts|ol)/)"
    ]
  },
  "husky": {
    "hooks": {
      "post-checkout": "yarn install --frozen-lockfile",
      "post-merge": "yarn install --frozen-lockfile",
      "post-rebase": "yarn install --frozen-lockfile",
      "pre-commit": "CI=true lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write",
      "git add",
      "yarn test --bail --findRelatedTests"
    ],
    "src/**/*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended-scss"
    ]
  }
}
